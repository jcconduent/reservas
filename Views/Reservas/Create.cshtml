@model reservasjc.Models.Reserva

<h2>Crear Reserva</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="NombreCliente"></label>
        <input asp-for="NombreCliente" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaReserva"></label>
        <input asp-for="FechaReserva" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="NumeroPersonas"></label>
        <input asp-for="NumeroPersonas" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Observaciones"></label>
        <input asp-for="Observaciones" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Volver</a>


